<%-include ('partials/header.ejs') %>
<body>
    <%-include ('partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h4>Responda</h4>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua reposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-success">Responder</button>
        </form>
        <hr>
        <h4>Repostas</h4>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>

</body>
<%- include('partials/footer.ejs') %>